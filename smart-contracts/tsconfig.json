{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise",
      "es2015.symbol"
    ]
  },
  "allowJs": true,
  "include": [
    "./scripts",
    "./scripts/helpers",
    "./deploy",
    "./test",
    "./tasks",
    "./tasks/blocklist",
    "./build",
    "./recover/test"
   ],
  "files": [
    "./hardhat.config.ts"
  ]
}