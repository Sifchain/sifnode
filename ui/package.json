{
  "name": "sifchain-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "app:serve:nochain": "cd ./app && yarn serve",
    "app:serve": "concurrently -r -k -s first \"yarn chain:start\" \"yarn chain:migrate && yarn app:serve:nochain\" ",
    "chain:cosmos:build": "cd ../ && make install",
    "chain:cosmos:start": "cd ./chains/cosmos && ./run-cosmos-test-chain.sh",
    "chain:migrate": "cd ./chains/ethereum && yarn migrate",
    "chain:ether:build": "cd ./chains/ethereum && truffle build",
    "chain:ether:start": "yarn ganache-cli",
    "chain:build": "concurrently -r \"yarn chain:cosmos:build\" \"yarn chain:ether:build\"",
    "chain:start": "concurrently -r -k \"yarn chain:cosmos:start\" \"yarn chain:ether:start\"",
    "core:test:nochain": "cd core && yarn test",
    "core:test": "concurrently -r -k -s first \"yarn chain:start\" \"sleep 5 && yarn chain:migrate && yarn core:test:nochain\"",
    "test": "yarn core:test"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^3.2.0",
    "concurrently": "^5.3.0",
    "ganache-cli": "^6.12.0",
    "truffle": "^5.1.48"
  },
  "workspaces": {
    "packages": [
      "core",
      "app",
      "chains/etherium"
    ]
  }
}
