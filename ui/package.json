{
  "name": "sifchain-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "app:serve:nochain": "cd ./app && yarn serve",
    "app:serve": "concurrently -r -k -s first \"yarn chain:start\" \"yarn chain:migrate && yarn app:serve:nochain\"",
    "chain:migrate": "cd ./chains/ethereum && yarn migrate",
    "chain:start": "ganache-cli",
    "core:test:nochain": "cd core && yarn test",
    "core:test": "concurrently -r -k -s first \"yarn chain:start\" \"yarn chain:migrate && yarn core:test:nochain\"",
    "test": "yarn core:test"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "ganache-cli": "^6.12.0",
    "truffle": "^5.1.48"
  },
  "workspaces": {
    "packages": [
      "core",
      "app",
      "chains/etherium"
    ]
  }
}
