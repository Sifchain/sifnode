{
  "name": "sifchain-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "app:build": "cd ./app && yarn build",
    "app:serve:all": "concurrently -r -k -s first \"yarn chain:start:all\" \"yarn chain:migrate && yarn app:serve\" ",
    "app:serve": "cd ./app && yarn serve",
    "build-storybook": "build-storybook",
    "build": "yarn lint && yarn chain:peggy:build && yarn core:build && yarn app:build",
    "chain:build": "concurrently -r \"yarn chain:sif:build\" \"yarn chain:eth:build\"",
    "chain:eth:advance": "cd ../smart-contracts && yarn advance",
    "chain:eth:build": "cd ./chains/eth && ./build.sh",
    "chain:eth:revert": "cd ./chains/eth && ./revert.sh",
    "chain:eth:snapshot": "cd ./chains/eth && ./snapshot.sh",
    "chain:eth": "cd ./chains/eth && ./launch.sh",
    "chain:migrate:eth": "cd ./chains/eth && ./migrate.sh",
    "chain:migrate:peggy": "cd ./chains/peggy && ./migrate.sh",
    "chain:migrate:sif": "cd ./chains/sif && ./migrate.sh",
    "chain:migrate": "yarn chain:migrate:peggy && yarn chain:migrate:eth && yarn chain:migrate:sif && yarn chain:postmigrate",
    "chain:peggy:build": "cd ./chains/peggy && ./build.sh",
    "chain:peggy:revert": "cd ./chains/peggy && ./revert.sh",
    "chain:peggy:snapshot": "cd ./chains/peggy && ./snapshot.sh",
    "chain:peggy": "cd ./chains/peggy && ./launch.sh",
    "chain:postmigrate": "cd chains && ./post_migrate.sh",
    "chain:revert": "concurrently -r -k -s first \"yarn chain:sif:revert\" \"yarn chain:eth:revert\" \"yarn chain:peggy:revert\"",
    "chain:sif:build": "cd ./chains/sif && ./build.sh",
    "chain:sif:revert": "cd ./chains/sif && ./revert.sh",
    "chain:sif:snapshot": "cd ./chains/sif && ./snapshot.sh",
    "chain:sif": "cd ./chains/sif && ./launch.sh",
    "chain:snapshot": "yarn stack:pause && yarn chain:peggy:snapshot && yarn chain:sif:snapshot && yarn chain:eth:snapshot",
    "chain:start:all": "concurrently -r -k \"yarn chain:sif\" \"yarn chain:eth\"",
    "core:build": "cd core && yarn build",
    "core:compile": "cd core && yarn compile",
    "core:test:all": "yarn core:compile && yarn core:test",
    "core:test": "cd core && yarn test",
    "core:watch": "cd core && yarn watch",
    "lint-quick": "yarn pretty-quick --staged --pattern 'ui/**/*.{vue,ts,js,json}'",
    "lint": "yarn prettier --config .prettierrc -c '**/*.{vue,ts,json}'",
    "prepare": "cd .. && husky install ./ui/.husky",
    "pw:stack": "./scripts/run-playwright-stack.sh",
    "pw:test:stack": "concurrently -r -k -s first \"yarn serve app/dist\" \"wait-on http://localhost:5000 && PORT=5000 yarn pw:test\"",
    "pw:test": "cd e2e && ./scripts/test.sh",
    "pw:test:debug": "cd e2e && DEBUG=pw:api NOSTACK=1 ./scripts/test.sh",
    "stack:backend-from-scratch": "./scripts/run-stack-backend-from-scratch.sh",
    "stack:backend": "./scripts/run-stack-backend.sh",
    "stack:pause": "./scripts/run-stack-pause.sh",
    "stack:save-default-snapshot": "./scripts/run-stack-save-default-snapshot.sh",
    "stack:save-snapshot": "yarn chain:snapshot",
    "stack": "./scripts/run-stack.sh",
    "storybook": "start-storybook -p 6006",
    "test": "yarn core:test:all"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^3.2.0",
    "@openzeppelin/test-helpers": "^0.5.10",
    "@storybook/addon-actions": "^6.2.0-beta.13",
    "@storybook/addon-docs": "^6.2.0-beta.13",
    "@storybook/addon-essentials": "^6.2.0-beta.13",
    "@storybook/addon-links": "^6.2.0-beta.13",
    "@storybook/vue3": "^6.2.0-beta.13",
    "concurrently": "^5.3.0",
    "ganache-cli": "^6.12.0",
    "husky": "^6.0.0",
    "lerna": "^3.22.1",
    "pretty-quick": "^3.1.0",
    "serve": "^11.3.2",
    "truffle": "^5.1.48",
    "vercel": "^21.0.1",
    "vue-loader": "^16.1.2",
    "wait-on": "^5.2.1",
    "wscat": "^4.0.1"
  },
  "workspaces": {
    "packages": [
      "core",
      "app",
      "e2e",
      "chains/etherium"
    ]
  },
  "resolutions": {
    "vue-loader": "^16.1.2"
  },
  "dependencies": {
    "@storybook/preset-scss": "^1.0.3",
    "codecov": "^3.8.0",
    "css-loader": "^5.2.0",
    "fkill-cli": "^6.1.0",
    "prettier": "^2.2.1",
    "sass-loader": "^10.1.1",
    "storybook-addon-designs": "^5.4.5",
    "storybook-vue-router": "^1.0.7",
    "style-loader": "^2.0.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0"
  }
}
